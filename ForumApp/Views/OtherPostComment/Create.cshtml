@model ForumApp.Models.User.Comment

<div id="new-comment" class="collapse in">
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="OtherPostComment" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <button class="btn btn-danger btn-sm" data-toggle="collapse" data-target="#new-comment">Cancel</button>
</div>