@model ForumApp.Models.User.SharedPost

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>SharedPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" style="width: 600px" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" style="width: 600px; height: 200px; max-width: 900px"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                <a href="/SharedPost/Details/@ViewContext.RouteData.Values["id"]" class="btn btn-danger btn-sm">Back to Details</a>
            </div>
        </form>
    </div>
</div>