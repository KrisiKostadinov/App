@using ForumApp.Models.User
@model Post
@{
    ViewData["Title"] = "CreateUserPost";
    List<Category> categories = (List<Category>)ViewData["Categories"];
}

<h2>New post</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUserPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" style="width: 570px" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" style="width: 570px; max-height: 1000px; resize: vertical"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="categoryId" style="width: 570px">
                    @foreach (var category in categories)
                    {
                        <option selected="selected" value="@category.Id">@category.Title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>