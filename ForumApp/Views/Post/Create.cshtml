@using ShopProject.Models
@model Post

@{
    ViewData["Title"] = "Create";
    List<string> categories = (List<string>)ViewData["CategoryNames"];
}
<div class="container text-center">

    <link href="~/css/site.css" rel="stylesheet"/>
    <div class="row alert-info" style="border-radius: 25px">

        @if (ViewData["Error"] != null)
        {
            <h2 style="font-family: fantasy; color: red">@ViewData["Error"]</h2>
        }

        @if (ViewData["Sucess"] == null)
        {
            <h2 style="font-family: identifier">Create New Topic</h2>
        }
        else
        {
            <div class="success" style="background-color: aqua; border-radius: 25px; margin-left: 20px">
                <h2 style="color: green; text-align: center">@ViewData["Sucess"]</h2>
            </div>
        }
        <div class="col-md-12 col-md-offset-0" style="margin-top: 20px">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div style="color: red; text-align: left">
                        <h1>*</h1>
                    </div>
                    <input asp-for="Title" class="form-control" style="border-radius: 25px; height: 60px; font-size: 20px; text-align: center; font-family: identifier" placeholder="Title" autofocus />
                </div>
                <br>
                <div class="form-group">
                    <input asp-for="Subtitle" class="form-control" style="border-radius: 25px; height: 60px; font-size: 20px; text-align: center; font-family: identifier" placeholder="Subtitle">
                </div>
                <div class="form-group">
                    <div style="color: red; text-align: left">
                        <h1>*</h1>
                    </div>
                    <textarea asp-for="Description" class="form-control" rows="7" style="border-radius: 25px; height: 200px; font-size: 20px; text-align: center; font-family: identifier" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <div style="color: red; text-align: left">
                        <h1>*</h1>
                    </div>
                    @if (categories != null)
                    {
                        <div class="form-group">
                            <label asp-for="Category.Title" class="control-label"></label>
                            <select class="form-control" name="categoryTitle" required>
                                @foreach (var categoryName in categories)
                                {
                                    <option value="@categoryName">@categoryName</option>
                                }
                            </select>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" style="border-radius: 25px; font-size: larger; width: 49%" />
                    <a asp-controller="Post" asp-action="All" class="btn btn-danger" style="border-radius: 25px; font-size: larger; width: 50%">Back</a>
                    @if (ViewData["Sucess"] != null)
                    {
                        <div style="margin-top: 20px">
                            <a asp-controller="Post" asp-action="All" class="btn btn-success" style="border-radius: 25px; font-size: larger; width: 50%">Next to all posts</a>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
