@using ShopProject.Models
@model ShopProject.Models.Post

@{
    ViewData["Title"] = "Delete";
}
<div class="container text-center">
    <div class="row alert-info" style="border-radius: 25px">

        <div class="col-md-12 col-md-offset-0" style="margin-top: 20px">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div style="color: red; text-align: left">
                        <h1>*</h1>
                    </div>
                    <input asp-for="Title" class="form-control" style="border-radius: 25px; height: 60px; font-size: 20px; text-align: center; font-family: identifier" placeholder="Title" autofocus readonly/>
                </div>
                <br>
                <div class="form-group">
                    <input asp-for="Subtitle" class="form-control" style="border-radius: 25px; height: 60px; font-size: 20px; text-align: center; font-family: identifier" placeholder="Subtitle" readonly>
                </div>
                <div class="form-group">
                    <div style="color: red; text-align: left">
                        <h1>*</h1>
                    </div>
                    <textarea asp-for="Description" class="form-control" rows="7" style="border-radius: 25px; height: 200px; font-size: 20px; text-align: center; font-family: identifier" placeholder="Description" readonly></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-success" style="border-radius: 25px; font-size: larger; width: 49%" />
                    <a asp-controller="Post" asp-action="All" class="btn btn-danger" style="border-radius: 25px; font-size: larger; width: 50%">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
